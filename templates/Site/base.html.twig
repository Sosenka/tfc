<!doctype html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>The force code</title>

    {% block stylesheet %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
              crossorigin="anonymous">
        <link href="{{ asset('css/cover.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
    {% endblock %}
</head>
<body class="d-flex h-100 text-center text-bg-dark">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-100">
        <div>
            <h3 class="float-md-start mb-0">The Force Code</h3>
            <nav class="nav nav-masthead justify-content-center float-md-end">
                <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href="#">Home</a>
                {% if app.user %}
                    <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_add_ticket') }}">Dodaj zgłoszenie</a>
                    <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_tickets') }}">Zgłoszenia</a>
                    <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_logout') }}">Wyloguj</a>
                {% else %}
                    <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_login') }}">Logowanie</a>
                    <a class="nav-link fw-bold py-1 px-0" href="{{ path('app_register') }}">Rejestracja</a>
                {% endif %}
            </nav>
        </div>
    </header>
    {% block content %}
    {% endblock %}
</div>


{% block javascript %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>